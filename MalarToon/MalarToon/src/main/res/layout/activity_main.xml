<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.kesavan.malartoon.MainActivity"
    tools:ignore="MergeRootFrame">

        <WebView
            android:id="@+id/activity_main_webview"
            android:layout_marginTop='30pt'
            android:layout_marginStart="10pt"
            android:layout_width="150pt"
            android:layout_height="175pt" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_open_toon"
            android:text="@string/button_toon"
            android:onClick="openToon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop='210pt'
            android:layout_marginStart="120pt"
            android:id="@+id/button_exit"
            android:text="@string/button_exit"
            android:onClick="exit" />

        <Button
            android:layout_marginStart="75pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_rand"
            android:id="@+id/button_rand"
            android:onClick="openRand" />

        <Button
            android:layout_marginTop='210pt'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_thanks"
            android:id="@+id/button_thanks"

            />



    </FrameLayout>
